<!doctype html>
<html>
<head>
  <title>@model.title</title>
  <link href="/vendors/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  @html.block("head")
  <link href="/css/site.css" rel="stylesheet" />
</head>
<body>
  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button class="btn btn-success navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="glyphicon glyphicon-chevron-down"></span>
        </button>
        <div id="logo">
          <a href='/'>
            <h4>The Board</h4>
          </a>
        </div>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="nav">
            <a href="/">Home</a>
          </li>
          <li class="nav">
            <a href="/register">Register</a>
          </li>
          <li class="nav">
            <a href="/login">Login</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <section id="body" class="container">
    <div class="page-header">
      <h1>@model.title</h1>
    </div>
    @html.block("body")
  </section>
  <hr />
  <footer class="container">
    <p>The Board</p>
  </footer>
  <script src="/vendors/jquery/jquery.min.js"></script>
  <script src="/vendors/angular/angular.min.js"></script>
  <script src="/vendors/bootstrap/bootstrap.min.js"></script>
  <script src="/vendors/underscore/underscore.min.js"></script>
  <script src="/vendors/angular-ui-bootstrap/ui-bootstrap.js"></script>

  @html.block("scripts")
</body>
</html>
